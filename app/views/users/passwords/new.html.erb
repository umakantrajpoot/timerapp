<div class="row">
  <div class="col-lg-3"></div>
  <div class="col-lg-6 signup-block">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 signup-block-hdr">
          <center><strong>Forget your password?</strong></center>
        </div>
        <div class="col-lg-2"></div>
        <div class="clear bdr"></div>
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
          <%= devise_error_messages! %>
        </div>
        <div class="col-lg-2"></div>
        <div class="clearboth"></div>
        <div class="spacer10"></div>
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
          <strong>Email</strong>
          <div class="clear"></div>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="col-lg-2"></div>
        <div class="clearboth"></div>
        <div class="spacer20"></div>
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
          <%= f.submit "Send me reset password instructions", class: 'btn btn-primary form-control' %>
          <div class="clear"></div>
          <%= render "devise/shared/links" %>
        </div>
        <div class="col-lg-2"></div>
      </div>
    <% end %>
  </div>
  <div class="col-lg-3"></div>
</div>